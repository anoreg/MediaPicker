<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/take_photo"
        style="@style/PickerBtnStyle"
        android:text="@string/picker_take_photo"
        android:textColor="@color/picker_text_color_dark" />

    <Button
        android:id="@+id/pick_photo"
        style="@style/PickerBtnStyle"
        android:layout_marginTop="1dp"
        android:text="@string/picker_album"
        android:textColor="@color/picker_text_color_dark" />

    <Button
        android:id="@+id/cancel"
        style="@style/PickerBtnStyle"
        android:layout_marginTop="8dp"
        android:text="@string/picker_cancel"
        android:textColor="@color/picker_text_color_warning" />

</LinearLayout>